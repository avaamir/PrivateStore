<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray200"
    android:orientation="vertical"
    tools:context=".TestActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.amir.ir.privatestore.ui.customs.MyRaisedButton
        android:id="@+id/btn_test"
        android:layout_margin="@dimen/standard_margin"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:text="سلام"
        app:image="@drawable/ic_profile_sample" />

    <Button
        android:id="@+id/btn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:textAllCaps="false"
        android:text="MainActivity"/>
    <Button
        android:id="@+id/btn_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:textAllCaps="false"
        android:text="ProductDetailsActivity"/>
    <Button
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_margin"
        android:textAllCaps="false"
        android:text="ProfileActivity"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle2">


        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:minWidth="@dimen/timer_min_view_frame"
            android:minHeight="@dimen/timer_min_view_frame"
            android:padding="8dp"
            android:text="09"
            android:textColor="@color/timer_text_color"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="@dimen/timer_text_size" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/timer_text_size" />


        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:minWidth="@dimen/timer_min_view_frame"
            android:minHeight="@dimen/timer_min_view_frame"
            android:padding="8dp"
            android:text="31"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/timer_text_color"
            android:textSize="@dimen/timer_text_size" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/timer_text_size" />

        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:minWidth="@dimen/timer_min_view_frame"
            android:minHeight="@dimen/timer_min_view_frame"
            android:padding="8dp"
            android:text="24"
            android:textColor="@color/timer_text_color"
            android:textSize="@dimen/timer_text_size" />


    </LinearLayout>

</LinearLayout>