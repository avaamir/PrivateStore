<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">


        <LinearLayout
            android:id="@+id/frame_ets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.amir.ir.privatestore.ui.customs.MyFloatLabeledEditText
                android:id="@+id/myFloatLabeledEditText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                app:fletPaddingBottom="12dp"
                app:fletPaddingRight="8dp"
                app:fletTextColor="@color/colorPrimaryDark"
                app:fletTextSize="6sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/et_old_password"
                    style="@style/my_edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="پسورد فعلی را وارد کنید"
                    android:inputType="textPassword" />

            </com.amir.ir.privatestore.ui.customs.MyFloatLabeledEditText>

            <com.amir.ir.privatestore.ui.customs.MyFloatLabeledEditText
                android:id="@+id/myFloatLabeledEditText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                app:fletPaddingBottom="12dp"
                app:fletPaddingRight="8dp"
                app:fletTextColor="@color/colorPrimaryDark"
                app:fletTextSize="6sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/et_new_password"
                    style="@style/my_edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="پسورد جدید را وارد کنید"
                    android:inputType="textPassword" />

            </com.amir.ir.privatestore.ui.customs.MyFloatLabeledEditText>

            <com.amir.ir.privatestore.ui.customs.MyFloatLabeledEditText
                android:id="@+id/myFloatLabeledEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="visible"
                app:fletPaddingBottom="12dp"
                app:fletPaddingRight="8dp"
                app:fletTextColor="@color/colorPrimaryDark"
                app:fletTextSize="6sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/et_new_password_confirm"
                    style="@style/my_edit_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="پسورد جدید را تکرار کنید"
                    android:inputType="textPassword" />

            </com.amir.ir.privatestore.ui.customs.MyFloatLabeledEditText>
        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/iransans_medium"
            android:text="انصراف"
            app:layout_constraintStart_toEndOf="@+id/btn_save"
            app:layout_constraintTop_toBottomOf="@+id/frame_ets" />

        <com.amir.ir.privatestore.ui.customs.MyRaisedButton
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/iransans_medium"
            app:layout_constraintBottom_toBottomOf="@+id/btn_cancel"
            app:layout_constraintStart_toStartOf="@+id/frame_ets"
            app:layout_constraintTop_toTopOf="@+id/btn_cancel"
            app:radius="5dp"
            app:progressTint="@color/white"
            app:text="ذخیره" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>