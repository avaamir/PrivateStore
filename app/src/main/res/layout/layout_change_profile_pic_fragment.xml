<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">


        <View
            android:id="@+id/btn_delete_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_circle_red"
            app:layout_constraintEnd_toEndOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/btn_delete_pic"
            app:layout_constraintEnd_toEndOf="@+id/btn_delete_pic"
            app:layout_constraintStart_toStartOf="@+id/btn_delete_pic"
            app:layout_constraintTop_toTopOf="@+id/btn_delete_pic"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_delete" />

        <TextView
            android:id="@+id/textView22"
            style="@style/my_gray_medium_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="حذف عکس"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/btn_delete_pic"
            app:layout_constraintStart_toStartOf="@+id/btn_delete_pic"
            app:layout_constraintTop_toBottomOf="@+id/btn_delete_pic" />


        <View
            android:id="@+id/btn_choose_from_gallery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shape_circle_purple"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_pic"
            app:layout_constraintTop_toTopOf="@+id/btn_delete_pic" />


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/btn_choose_from_gallery"
            app:layout_constraintEnd_toEndOf="@+id/btn_choose_from_gallery"
            app:layout_constraintStart_toStartOf="@+id/btn_choose_from_gallery"
            app:layout_constraintTop_toTopOf="@+id/btn_choose_from_gallery"
            app:srcCompat="@drawable/ic_gallery" />

        <TextView
            android:id="@+id/textView2"
            style="@style/my_gray_medium_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="آلبوم عکس"
            app:layout_constraintEnd_toEndOf="@+id/btn_choose_from_gallery"
            app:layout_constraintStart_toStartOf="@+id/btn_choose_from_gallery"
            app:layout_constraintTop_toBottomOf="@+id/btn_choose_from_gallery" />


        <Button
            android:id="@+id/btn_cancel"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/iransans_medium"
            android:text="انصراف"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView26"
            style="@style/my_gray_medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            android:text="انتخاب عکس پروفایل"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>